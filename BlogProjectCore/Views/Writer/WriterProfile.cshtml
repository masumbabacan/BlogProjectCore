@model Entities.Concrete.Writer
@{
    ViewData["Title"] = "WriterProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterProfile", "Writer", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profilim</h4>
            <br />
            <form class="forms-sample">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.WriterId)
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Ad-Soyad</label>
                    <input asp-for="WriterName" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-Mail</label>
                    <input asp-for="WriterMail" type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input asp-for="WriterPassword" class="form-control" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Profil Resmi</label>
                    <input asp-for="WriterImage" type="text" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkımda</label>
                    <textarea asp-for="WriterAbout" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

}
