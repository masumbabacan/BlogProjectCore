@using Entities.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            @*<p class="card-description">
            Add class <code>.table-bordered</code>
        </p>*@
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Blog Başlığı </th>
                        <th> Kategori </th>
                        <th> Oluşturma Tarihi </th>
                        <th> Durum </th>
                        <th> Güncelle </th>
                        <th> Sil </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.BlogId </td>
                            <td> @item.BlogTitle </td>
                            <td>
                                @item.Category.CategoryName
                            </td>
                            <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>

                            @if (item.BlogStatus == true)
                            {
                                <td><label class="badge badge-success">Aktif</label></td>
                            }
                            else
                            {
                                <td><label class="badge badge-danger">Pasif</label></td>
                            }

                        <td>
                            <button type="button" class="btn btn-sm btn-gradient-light btn-icon-text">Güncelle 
                            <i class="mdi mdi-file-check btn-icon-append"></i>
                            </button>
                        </td>
                            <td>
                                <button type="submit" class="btn btn-sm btn-gradient-danger mr-2">Sil 
                                <i class="mdi mdi-delete-empty btn-icon-text"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <button type="submit" class="btn btn-sm btn-gradient-success mr-2"> <i class="mdi mdi-plus-box menu-icon"></i> Yeni Blog</button>
        </div>
    </div>
</div>

